{
  "version": 2,
  "rewrites": [
    {
      "source": "/_supabase/(.*)",
      "destination": "https://jexrtsyokhegjxnvqjur.supabase.co/$1"
    },
    {
      "source": "/api/db/(.*)",
      "destination": "https://jexrtsyokhegjxnvqjur.supabase.co/$1"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    {
      "source": "/(sw.js|registerSW.js|manifest.webmanifest|pwa-.*.png|vite.svg|favicon.ico)",
      "destination": "/$1"
    },
    {
      "source": "/((?!assets|api|_supabase).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
